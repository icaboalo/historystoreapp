<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/category_image">

        <EditText
            android:id="@+id/product_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/product_name_input_hint" />

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_image"
        android:layout_marginTop="16dp"
        android:entries="@array/categories_array"
        >

    </Spinner>

    <Spinner
        android:id="@+id/type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_spinner"
        android:layout_marginTop="16dp"
        android:entries="@array/type_uom_array"
        android:prompt="@string/type_uom_prompt"
        >

    </Spinner>

    <FrameLayout
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:id="@+id/conversion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/type_spinner">

        <ImageView
            android:id="@+id/image_less_conversion"
            android:src="@drawable/ic_remove_circle_outline_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:id="@+id/conversion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_spinner"
            android:gravity="center"
            android:text="Quantity"
            android:textSize="24sp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/image_more_conversion"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical" />
    </FrameLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conversion_container"
        android:layout_marginTop="16dp"
        android:id="@+id/frameLayout">

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/product_price_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/product_price_input_hint" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/capture_unit_price_label"
        android:id="@+id/textView"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="41dp"
        android:gravity="center"
        />


</RelativeLayout>