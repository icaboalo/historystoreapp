<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/product_category_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_add_white_48dp"/>
            <TextView
                android:id="@+id/product_name_label"
                android:text="Product name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/product_category_image"
                android:textSize="24sp"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/product_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_toRightOf="@+id/product_category_image"
                android:padding="10dp"
                android:layout_below="@+id/product_name_label"/>

            <LinearLayout
                android:id="@+id/quantity_price_container"
                android:layout_below="@+id/product_category_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/product_quantity_label"
                    android:gravity="center_horizontal"
                    android:text="1pz"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight=".5"

                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/product_price_label"
                    android:gravity="center_horizontal"
                    android:text="$105.00"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>